.xrui__modal.pc {
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    width: 600px;
    height: 500px;
}

.xrui__modal.ar {
    width: 100%;
    height: 100%;
}

.xrui__modal {
    background-color: rgb(255, 255, 255);
}

.xrui .unity-base-text-field {
    margin-left: 10px;
    margin-right: 10px;
    margin-top: 5px;
    margin-bottom: 5px;
}

.xrui .unity-base-text-field__input {
    background-color: rgba(0, 0, 0, 0);
    border-left-width: 1.5px;
    border-right-width: 1.5px;
    border-top-width: 1.5px;
    border-bottom-width: 1.5px;
    border-left-color: var(--xrui-grey);
    border-right-color: var(--xrui-grey);
    border-top-color: var(--xrui-grey);
    border-bottom-color: var(--xrui-grey);
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    min-height: 48px;
    color: rgb(0, 0, 0);
    padding-left: 15px;
    padding-right: 15px;
    padding-top: 15px;
    padding-bottom: 15px;
    background-image: none;
    margin-left: 0;
    margin-right: 0;
    margin-top: 0;
    margin-bottom: 0;
}

.xrui .unity-text-field__label {
    color: var(--xrui-dark-grey);
    margin-left: 0;
    margin-right: 0;
    margin-top: 0;
    margin-bottom: 0;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
}

