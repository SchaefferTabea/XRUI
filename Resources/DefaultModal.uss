.xrui .unity-text-field.error > Label {
    color: var(--xrui-alert-danger);
}

.xrui .unity-text-field.error > #unity-text-input {
    border-left-color: var(--xrui-alert-danger);
    border-right-color: var(--xrui-alert-danger);
    border-top-color: var(--xrui-alert-danger);
    border-bottom-color: var(--xrui-alert-danger);
}

.xrui .unity-text-field:focus > Label {
    color: var(--xrui-primary);
}

.xrui .unity-text-field:focus > #unity-text-input {
    border-left-color: var(--xrui-primary);
    border-right-color: var(--xrui-primary);
    border-top-color: var(--xrui-primary);
    border-bottom-color: var(--xrui-primary);
}

.xrui #ContainerWithButton > Button {
    margin-bottom: 5px;
    margin-top: 5px;
    margin-left: 10px;
    margin-right: 10px;
}